/* Includes */
#include "stm32f0xx.h"

/* Private macro */
/* Private variables */
/* Private function prototypes */
/* Private functions */
void EXTI0_IRQHandler(void){
	if(EXTI->PR & EXTI_PR_PR0){
		EXTI->PR |= EXTI_PR_PR0;
		GPIOC->ODR ^= GPIO_ODR_9;
	}
}
void init_EXTI0(void){
	RCC->AHBENR|=RCC_AHBENR_GPIOAEN;
	GPIOA->MODER &= ~GPIO_MODER_MODER0;
	//Enable clocking of EXTI module
	RCC->APB2ENR |= RCC_APB2ENR_SYSCFGCOMPEN;
	RCC->AHBENR |= RCC_AHBENR_GPIOCEN;
	GPIOC->MODER |= GPIO_MODER_MODER9_0;
	//EXTI->IMR |= EXTI_IMR_IM0;
	EXTI->EMR |= EXTI_EMR_EM0;
	//Set EXTI0 on interruption by rising front
	EXTI->RTSR |= EXTI_RTSR_TR0;
	//EXTI->FTSR |= EXTI_FTSR_FT0; add this with rising front to get the result which is similar to Button_Handler project!
	NVIC_EnableIRQ(EXTI0_1_IRQn);
	NVIC_SetPriority(EXTI0_1_IRQn, 8);
}
/**
**===========================================================================
**
**  Abstract: main program
**
**===========================================================================
*/

int main(void)
{
  //uint32_t i = 0;

  /* TODO - Add your application code here */
  init_EXTI0();
  /* Infinite loop */
  while (1)
  {

  }
}
